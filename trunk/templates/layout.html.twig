<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title>Five Star Hotel</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Content-Style-Type" content="text/css" />
<link href="{{ app.request.BaseUrl }}/resource/style.css" rel="stylesheet" type="text/css" />
<link href="{{ app.request.BaseUrl }}/resource/layout.css" rel="stylesheet" type="text/css" />
<script src="JQuery.js" ></script>
<script src="{{ app.request.BaseUrl }}/resource/maxheight.js" type="text/javascript"></script>
<!--[if lt IE 7]>
	<link href="{{ app.request.BaseUrl }}/resource/ie_style.css" rel="stylesheet" type="text/css" />
   <script type="text/javascript" src="{{ app.request.BaseUrl }}/resource/ie_png.js"></script>
   <script type="text/javascript">
       ie_png.fix('.png, #header .row-2, #header .nav li a, #content, .gallery li');
   </script>
<![endif]-->
</head>
<body id="page{{ pageid==6?5:pageid }}" onload="new ElementMaxHeight();">
	<div id="main">
	<!-- header -->
        <div id="header">
            <div class="row-1">
                <div class="wrapper">
                    <div class="logo">
                        <h1><a href="home.html">Five Star</a></h1>
                        <em>Hotel</em>
                        <strong>True Luxury</strong>
                    </div>
                    <div class="phones">
                        1-800-412-45-56<br />
                        1-800-542-64-48
                    </div>
                </div>
            </div>
        <div class="row-2">
            <div class="indent">
                <!-- header-box begin -->
                <div class="header-box">
                    <div class="inner">
                        {% block menu %}
                        <ul class="nav">
                            <li><a href="{{path('homepage')}}" class="{{ pageid==1 ?'current':' ' }}">Home page</a></li>
                            <li><a href="{{path('services')}}" class="{{ pageid==2 ?'current':' ' }}">Services</a></li>
                            <li><a href="{{path('gallery')}}" class="{{ pageid==3 ?'current':' ' }}">Gallery</a></li>
                            <li><a href="{{path('restaurant')}}" class="{{ pageid==4 ?'current':' ' }}">Restaurant</a></li>
                            <li><a href="{{path('testimonials')}}" class="{{ pageid==5 ?'current':' ' }}">Testimonials</a></li>
                            <li><a href="{{path('booking')}}" class="{{ pageid==6 ?'current':' ' }}">Booking</a></li>
                        </ul>
                        {% endblock %}
                    </div>
                </div>
                <!-- header-box end -->
            </div>
        </div>
        </div>
		<!-- content -->
		<div id="content">
                    {% block gallery %}{% endblock %}
                 {% block main_content %}
			<div class="wrapper">
            <div class="aside maxheight">
            	<!-- box begin -->
               <div class="box maxheight">
               	<div class="inner">
                    {% block sidebar %}
                  	<h3>Side bar:</h3>
                        Hello sidebar
                      {% endblock %}
                  </div>
               </div>
               <!-- box end -->
            </div>
            <div class="content">
            	<div class="indent">
                {% block right_content %}
               	<h2>Right Content</h2>
                    Right Content
                  <div class="clear"></div>
                 {% endblock %}
               </div>
            </div>
         </div>
                    {% endblock %}
		</div>
		<!-- footer -->
		<div id="footer">
                    {% block footer%}
            <ul class="nav">
                <li><a href="index.html">Home</a>|</li>
                <li><a href="services.html">Services</a>|</li>
                <li><a href="gallery.html">Gallery</a>|</li>
                <li><a href="restaurant.html">Restaurant</a>|</li>
                <li><a href="testimonials.html">Testimonials</a>|</li>
                <li><a href="booking.html">Booking</a></li>
             </ul>
                    
         <div class="wrapper">
            <div class="fleft">Copyright (c) 2009 FiveStar Hotel</div>
            <div class="fright">Designed by lovely TemplateMonster - <a href="http://www.templatemonster.com/">website templates</a> provider</div>
         </div>
        {% endblock %}
      </div>
	</div>
</body>
</html>